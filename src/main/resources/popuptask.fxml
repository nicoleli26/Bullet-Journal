<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="113.0" prefWidth="190.0">
      <children>
         <Rectangle arcHeight="5.0" arcWidth="5.0" height="141.0" layoutY="-3.0" stroke="BLACK" strokeType="INSIDE" width="233.0">
            <fill>
               <RadialGradient centerX="0.6329639889196677" centerY="0.7434679334916865" radius="0.846820809248555">
