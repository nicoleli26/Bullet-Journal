                     <Stop>
                        <color>
                           <Color red="0.8673002123832703" green="0.44176414608955383" blue="0.9736841917037964" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="1.0" green="1.0" blue="1.0" />
                        </color>
                     </Stop>
                  </stops>
               </RadialGradient>
            </fill>
         </Rectangle>
         <Button fx:id="closeTask" layoutX="158.0" layoutY="44.0" mnemonicParsing="false" text="Done">
            <font>
               <Font name="Bodoni 72 Book" size="13.0" />
            </font></Button>
         <Label layoutX="4.0" layoutY="5.0" text="Enter a new task!">
            <font>
               <Font name="Bodoni 72 Book" size="13.0" />
            </font></Label>
         <TextField fx:id="taskName" layoutX="58.0" layoutY="38.0" prefHeight="26.0" prefWidth="91.0" />
         <TextField fx:id="taskDescription" layoutX="59.0" layoutY="69.0" prefHeight="26.0" prefWidth="89.0" />
         <TextField fx:id="taskDay" layoutX="59.0" layoutY="101.0" prefHeight="26.0" prefWidth="89.0" />
         <Label layoutX="22.0" layoutY="45.0" text="NAME">
            <font>
               <Font name="Bodoni 72 Oldstyle Book" size="8.0" />
            </font>
         </Label>
         <Label layoutX="6.0" layoutY="77.0" text="DESCRIPTION">
            <font>
               <Font name="Bodoni 72 Book" size="8.0" />
            </font>
         </Label>
         <Label layoutX="31.0" layoutY="110.0" text="DAY">
            <font>
               <Font name="Bodoni 72 Oldstyle Book" size="8.0" />
            </font>
         </Label>
         <Button fx:id="saveTask" layoutX="160.0" layoutY="13.0" mnemonicParsing="false" text="Save">
            <font>
               <Font name="Bodoni 72 Oldstyle Book" size="13.0" />
            </font></Button>
      </children></AnchorPane>
</Scene>
